<h1><%=@review.title%></h1>
<h2>By: <%=@review.user.username%></h2>

<div><%= @review.content%></div>

<p><%= link_to "See all comments", review_comments_path(@review)%></p>
<p><%= link_to "Add a comment", new_review_comment_path(@review)%></p>

<h4> Comments: </h4>
<% @review.comments.each do |c|%>
    <li><strong><%= c.user.username%></strong> - "<%= link_to c.content, commment_path(c)%>" </li>
<% end %>