<% if @comment.post %>
<h1> New Comment for <%= @comment.post.title%>! </h1>
<% else %>
<h1> New Comment </h1>
<% end %>

<%= form_for([@comment.review,@comment]) do |f|%>

    <% if !@comment.review %>
        <%= f.label :review %>
        <%= f.collection_select :review_id, Review.all, :id, :title %>
    <% else %>
        <% f.hidden_field :review_id %>
    <% end %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.submit %>
    
<% end %>